<!-- 标签云 -->
<div class="mdui-center article">
    <div class="mdui-shadow-2 post_tag ">
        <!--标签云-->
        <h3>共计&nbsp;<%= site.tags.length %>&nbsp;个标签</h3>
        <% site.tags.sort('name').each(function(item){ %>
            <% if(item.posts.length){ %>
                <div class="mdui-chip">
                    <a class="mdui-chip-title mdui-text-color-black-disabled" href="#<%= item.name %>">
                        <%= item.name %>
                    </a>
                </div>
            <% } %>
        <% }); %>
    </div>

    <!-- 标签列表 -->
    <div class="mdui-panel post_tag_list" mdui-panel="{accordion : true}">
    <% site.tags.map(function(tag){  %>
        <div class="mdui-panel-item" id="<%= tag.name %>">
            <div class="mdui-panel-item-header">
                <div class="mdui-panel-item-title" id="<%= tag.name %>"><%= tag.name %></div>
                <div class="mdui-panel-item-summary">共<%= tag.length %>篇</div>
                <i class="mdui-panel-item-arrow mdui-icon material-icons">keyboard_arrow_down</i>
            </div>
            <div class="mdui-panel-item-body">
                <% tag.posts.map(function(post){  %>
                    <span class="mdui-panel-item-summary post-time">
                        <%= post.date.format('MM-DD') %>
                    </span>
                    <a class="mdui-panel-item-summary post-name" href="<%- url_for(post.path) %>"><%- post.title || "Untitled" %></a>
                <hr>
                <% }) %>
            </div>
        </div>
    <% }) %>
    </div> 
</div>


